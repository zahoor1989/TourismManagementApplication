<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        tools:context="com.example.zahoor.activities.RegisterTransportActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp"
        android:text="@string/register_transport"/>

    <EditText
        android:id="@+id/productId"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="@string/registration_no"
        android:inputType="textPersonName" />
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Type"
            android:ems="10"
            android:id="@+id/transportType"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center" android:layout_marginBottom="20dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Vehicle Name"
            android:ems="10"
            android:id="@+id/vehicleName"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center" android:layout_marginBottom="20dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Pick up"
            android:ems="10"
            android:id="@+id/pickUp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center" android:layout_marginBottom="20dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Drop"
            android:id="@+id/dropUp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center" android:layout_marginBottom="20dp"/>
    <EditText
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Price"
            android:ems="10"
            android:id="@+id/transportPrice"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" android:id="@+id/innerLayout">
        <Button
                android:text="View Transport"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@color/colorBackground"
                android:id="@+id/viewTransport" android:layout_marginLeft="30dp"
                android:layout_gravity="bottom"/>
        <Button
                android:text="Add Transport"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@color/colorBackground"
                android:id="@+id/addTransportBtn" android:layout_gravity="right" android:layout_marginLeft="30dp"/>
    </LinearLayout>
</LinearLayout>
