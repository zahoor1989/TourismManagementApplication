<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context="com.example.zahoor.activities.RegisterPackageActivity" tools:layout_editor_absoluteY="25dp">

    <EditText
            android:layout_width="302dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/packName"
            android:gravity="center_vertical|center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="27dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginEnd="42dp"
            android:layout_marginRight="42dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/packDetail"
            app:layout_constraintVertical_bias="0.43"/>
    <EditText
            android:layout_width="302dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:hint="Detail"
            android:ems="10"
            android:id="@+id/packDetail"
            android:gravity="center_vertical|center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/packName" android:layout_marginEnd="42dp"
            android:layout_marginRight="42dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="38dp" app:layout_constraintBottom_toTopOf="@+id/packImage"/>
    <EditText
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Image"
            android:ems="10"
            android:id="@+id/packImage"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/packDetail" android:layout_marginBottom="45dp"
            app:layout_constraintBottom_toTopOf="@+id/packPrice" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Price"
            android:ems="10"
            android:id="@+id/packPrice"
            android:gravity="center_vertical|center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/packImage" android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Add Package"
            android:layout_width="138dp"
            android:layout_height="48dp"
            android:id="@+id/addPackage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/packPrice" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="142dp" app:layout_constraintEnd_toStartOf="@+id/viewPackage"
            android:layout_marginEnd="31dp" android:layout_marginRight="31dp"/>
    <Button
            android:text="View Package"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:id="@+id/viewPackage" android:layout_marginLeft="31dp" android:layout_marginStart="31dp"
            app:layout_constraintStart_toEndOf="@+id/addPackage" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/packPrice" android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="142dp"/>
</android.support.constraint.ConstraintLayout>
