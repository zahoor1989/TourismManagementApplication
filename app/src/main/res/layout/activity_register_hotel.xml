<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context="com.example.zahoor.activities.RegisterHotelActivity">

    <EditText
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/hotelName"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="63dp"
            android:layout_marginStart="63dp" android:layout_marginEnd="106dp" android:layout_marginRight="106dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="505dp" android:gravity="center" app:layout_constraintHorizontal_bias="0.287"
            app:layout_constraintVertical_bias="0.0" android:hint="Hotel Name"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Hotel Address"
            android:ems="10"
            android:id="@+id/hotelAddress"
            android:gravity="center_vertical|center_horizontal" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="35dp" android:layout_marginStart="35dp" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/hotelName" android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="13dp" app:layout_constraintBottom_toTopOf="@+id/hotelPhone"
            app:layout_constraintVertical_bias="0.47000003" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="317dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:hint="Phone No"
            android:ems="10"
            android:id="@+id/hotelPhone"
            android:gravity="center_horizontal" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="34dp" android:layout_marginStart="34dp" android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/hotelAddress" android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toTopOf="@+id/hotelDesc"/>
    <EditText
            android:layout_width="319dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:hint="Description"
            android:ems="10"
            android:id="@+id/hotelDesc"
            android:gravity="center_horizontal" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="33dp" android:layout_marginStart="33dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/hotelPhone" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/hotelService" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="317dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:hint="Service"
            android:ems="10"
            android:id="@+id/hotelService"
            android:gravity="center_horizontal" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="34dp" android:layout_marginStart="34dp"
            android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hotelDesc"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/hotelPrice"/>
    <EditText
            android:layout_width="317dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:hint="Price per Night"
            android:ems="10"
            android:id="@+id/hotelPrice"
            android:gravity="center_horizontal" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="34dp" android:layout_marginStart="34dp" android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/hotelService" android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toTopOf="@+id/hotelImage"/>
    <EditText
            android:layout_width="319dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:hint="Image"
            android:ems="10"
            android:id="@+id/hotelImage"
            android:gravity="center_horizontal" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="33dp" android:layout_marginStart="33dp" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/hotelPrice" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/viewHotelBtn"/>
    <Button
            android:text="Add Hotel"
            android:layout_width="133dp"
            android:layout_height="0dp"
            android:id="@+id/addHotelBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="217dp"
            android:layout_marginRight="217dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="42dp"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/hotelImage"/>
    <Button
            android:text="View Hotel"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:id="@+id/viewHotelBtn" android:layout_marginLeft="56dp" android:layout_marginStart="56dp"
            app:layout_constraintStart_toEndOf="@+id/addHotelBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/hotelImage" android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="43dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.857"/>
</android.support.constraint.ConstraintLayout>
